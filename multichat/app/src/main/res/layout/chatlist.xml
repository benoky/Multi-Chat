<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:id="@+id/padding_tv"
        android:layout_width="6dp"
        android:layout_height="60dp" />

    <TextView
        android:id="@+id/tv_roomname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/padding2_tv"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/padding_tv"
        android:layout_toRightOf="@+id/padding_tv"
        android:text="roomname"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/padding2_tv"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/padding_tv"
        android:layout_toRightOf="@+id/padding_tv" />

</RelativeLayout>