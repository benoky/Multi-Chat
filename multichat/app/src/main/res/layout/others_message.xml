<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_marginbox2"
        android:layout_width="10dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/tv_email2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/tv_marginbox2"
        android:text="Nickname"
        android:textColor="#333333" />

    <TextView
        android:id="@+id/tv_msgbox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_email2"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@id/tv_marginbox2"
        android:background="#FDEDBC"
        android:maxWidth="250dp"
        android:padding="12dp"
        android:text="Other's Message"
        android:textColor="#0B0B0B" />

    <TextView
        android:id="@+id/tv_date2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_email2"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/tv_msgbox2"
        android:layout_toRightOf="@+id/tv_msgbox2"
        android:text="2020.11.01"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_time2"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_msgbox2"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="24dp"
        android:layout_toEndOf="@+id/tv_msgbox2"
        android:layout_toRightOf="@+id/tv_msgbox2"
        android:text="11:20"
        android:textSize="12sp" />

</RelativeLayout>